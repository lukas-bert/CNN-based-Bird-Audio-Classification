# using pgf backend
backend : pgf
# axes configs
axes.labelsize: 16
axes.linewidth: 1
axes.facecolor: white
axes.formatter.min_exponent: 2
axes.titlesize: 14
# Errorbar properties
errorbar.capsize: 1.25
# Figure properties
figure.figsize: 6, 4.5
figure.dpi: 100
# Outer frame color
figure.facecolor: white
figure.autolayout: True
# Set default font to Times New Roman
font.family: serif
font.size: 7
font.weight: 200
# Draw the legend on a solid background
legend.frameon: False
legend.fancybox: True
# Inherit the background color from the plot
legend.facecolor: inherit
legend.numpoints: 1
legend.labelspacing: 0.1
legend.fontsize: 14
legend.title_fontsize: 14
# Automatically choose the best location
legend.loc: best
# Space between the handles and their labels
legend.handletextpad: 0.375
# Space between the borders of the plot and the legend
legend.borderaxespad: 0.5
# Lines settings
lines.linewidth: 1.65
lines.markeredgewidth: 0.75
lines.markersize: 8
# Saved figure settings
savefig.bbox: tight
savefig.pad_inches: 0.15
savefig.format: pdf
# Ticks settings
# xticks
xtick.minor.visible: True
xtick.top: True
xtick.major.size: 7
xtick.minor.size: 3.5
xtick.major.width: 1
xtick.minor.width: 1
xtick.major.pad: 5
xtick.minor.pad: 5
xtick.labelsize: 15
xtick.direction: in
# yticks
ytick.minor.visible: True
ytick.right: True
ytick.major.size: 7
ytick.minor.size: 3.5
ytick.major.width: 1
ytick.minor.width: 1
ytick.major.pad: 5
ytick.minor.pad: 5
ytick.labelsize: 15
ytick.direction: in
# Legend frame border size
# WARNING: this affects every patch object
# (i.e. histograms and so on)
patch.linewidth: 1
xaxis.labellocation: right
yaxis.labellocation: top

# TeX benutzen
pgf.rcfonts: False
text.usetex : True
pgf.texsystem : lualatex
pgf.preamble : \input{header-matplotlib.tex}